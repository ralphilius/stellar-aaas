{
  "compilerOptions": {
    "target": "es2018",
    "lib": [
      "esnext",
      "dom"
    ],
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "app",
    "strict": true,
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": [
      "node",
      "mocha"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "./tests/",
    "./node_modules/",
    "./app/"
  ],
}