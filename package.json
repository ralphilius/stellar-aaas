{
  "name": "stellar-aaas",
  "main": "app/index.js",
  "author": "ralphilius <ralphilius@gmail.com>",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "test": "PORT=3001 env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'tests/**/*.ts' --exit",
    "build": "npx tsc",
    "dev": "ts-node src/index.ts",
    "init": "npx envdist",
    "start": "npm run build && node app/index.js",
    "watch": "./node_modules/nodemon/bin/nodemon.js"
  },
  "license": "MIT",
  "dependencies": {
    "@replit/database": "^2.0.1",
    "bignumber.js": "^9.0.1",
    "express": "^4.17.1",
    "nanoid": "^3.1.25",
    "node-fetch": "^2.6.1",
    "stellar-sdk": "^8.2.5"
  },
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.6.1",
    "@types/node-fetch": "^2.5.12",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "mocha": "^9.0.3",
    "nodemon": "^2.0.12",
    "ts-node": "^10.2.0",
    "typescript": "^4.3.5"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run dev",
    "ext": "ts"
  }
}
